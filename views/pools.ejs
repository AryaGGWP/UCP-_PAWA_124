<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pools Management</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1>Pools Management</h1>
  <form action="/" method="POST">
    <input type="text" name="nama" placeholder="Pool Name" required>
    <input type="number" step="0.01" name="harga" placeholder="Price" required>
    <button type="submit">Add Pool</button>
  </form>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% pools.forEach(pool => { %>
      <tr>
        <td><%= pool.nama %></td>
        <td><%= pool.harga %></td>
        <td>
          <form action="/update/<%= pool.id %>" method="POST">
            <button type="submit">Update</button>
          </form>
          <form action="/delete/<%= pool.id %>" method="POST">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
